{
  "name": "code-indexer-extension",
  "displayName": "Code Indexer",
  "description": "Advanced code indexing with tree-sitter and SQLite",
  "version": "0.1.0",
  "publisher": "architect-ai",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeIndexer.indexWorkspace",
        "title": "Code Indexer: Index Workspace"
      },
      {
        "command": "codeIndexer.querySymbols",
        "title": "Code Indexer: Query Symbols"
      },
      {
        "command": "codeIndexer.clearIndex",
        "title": "Code Indexer: Clear Index"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "esbuild src/extension.ts src/worker/worker.ts --bundle --outdir=dist --external:vscode --external:web-tree-sitter --external:better-sqlite3 --format=cjs --platform=node --target=node18 --sourcemap",
    "rebuild": "electron-rebuild -f -w better-sqlite3 -v 39.0.0",
    "watch": "npm run build -- --watch",
    "test": "node test/validate.js",
    "validate": "npm run build && node dist/test/validate.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.11.5",
    "@types/sql.js": "^1.4.9",
    "@types/vscode": "^1.85.0",
    "drizzle-kit": "^0.20.14",
    "electron": "^30.0.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "drizzle-orm": "^0.30.4",
    "tree-sitter-wasms": "^0.1.11",
    "web-tree-sitter": "^0.20.8"
  }
}