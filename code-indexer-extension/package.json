{
  "name": "code-indexer-extension",
  "displayName": "Code Indexer",
  "description": "Advanced code indexing with tree-sitter and SQLite",
  "version": "0.1.0",
  "publisher": "architect-ai",
  "engines": {
    "vscode": "^1.85.0",
    "node": ">=20.0.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeIndexer.indexWorkspace",
        "title": "Code Indexer: Index Workspace"
      },
      {
        "command": "codeIndexer.querySymbols",
        "title": "Code Indexer: Query Symbols"
      },
      {
        "command": "codeIndexer.clearIndex",
        "title": "Code Indexer: Clear Index"
      },
      {
        "command": "codeIndexer.exportGraph",
        "title": "Code Indexer: Export Graph as JSON"
      },
      {
        "command": "codeIndexer.exportArchitectureSkeleton",
        "title": "Code Indexer: Export Architecture Skeleton as JSON"
      },
      {
        "command": "codeIndexer.toggleFileWatcher",
        "title": "Code Indexer: Toggle File Watcher"
      },
      {
        "command": "codeIndexer.visualizeGraph",
        "title": "Code Indexer: Visualize Code Graph"
      },
      {
        "command": "codeIndexer.configureAI",
        "title": "Code Indexer: Configure AI Keys"
      },
      {
        "command": "codeIndexer.refineGraph",
        "title": "Code Indexer: Refine Graph with AI (Architect Pass)"
      },
      {
        "command": "codeIndexer.refineArchitecture",
        "title": "Code Indexer: Refine Architecture Labels with AI"
      },
      {
        "command": "architect.viewDirectory",
        "title": "Architect: View Module Graph"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Code Indexer",
      "properties": {
        "codeIndexer.vertexProject": {
          "type": "string",
          "description": "Google Cloud Project ID for Vertex AI (Gemini 1.5 Pro). Required for strategic analysis."
        },
        "codeIndexer.groqApiKey": {
          "type": "string",
          "description": "Groq API Key (Llama 3.1). Required for reflex/fast analysis."
        },
        "codeIndexer.geminiApiKey": {
          "type": "string",
          "description": "Google Gemini API Key (Gemini 1.5 Pro). Simple alternative to Vertex AI project ID."
        },
        "architectAI.useLSP": {
          "type": "boolean",
          "default": false,
          "description": "Enable LSP-based symbol resolution for 100% accurate type definitions (TypeScript/JavaScript). Uses VS Code's built-in language server."
        }
      }
    },
    "menus": {
      "explorer/context": [
        {
          "command": "architect.viewDirectory",
          "group": "navigation",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "architect-ai-sidebar-view",
          "title": "Architect AI",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "architect-ai-sidebar-view": [
        {
          "type": "webview",
          "id": "architect-ai-sidebar",
          "name": "Navigate",
          "icon": "resources/icon.svg",
          "contextualTitle": "Architect AI"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:webview && esbuild src/extension.ts src/worker/worker.ts --bundle --outdir=dist --external:vscode --external:web-tree-sitter --external:sql.js --format=cjs --platform=node --target=node20 --sourcemap && npm run copy:wasm",
    "build:webview": "cd webview && npm install && npm run build",
    "copy:wasm": "cp node_modules/sql.js/dist/sql-wasm.wasm dist/worker/sql-wasm.wasm",
    "watch": "npm run build -- --watch",
    "test": "node test/validate.js",
    "validate": "npm run build && node dist/test/validate.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "devDependencies": {
    "@google-cloud/vertexai": "^1.10.0",
    "@google/generative-ai": "^0.24.1",
    "@types/node": "^20.11.5",
    "@types/sql.js": "^1.4.9",
    "@types/vscode": "^1.85.0",
    "drizzle-kit": "^0.20.14",
    "drizzle-orm": "^0.45.1",
    "esbuild": "^0.20.0",
    "groq-sdk": "^0.37.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "sql.js": "^1.14.0",
    "tree-sitter-wasms": "^0.1.11",
    "web-tree-sitter": "^0.20.8"
  }
}